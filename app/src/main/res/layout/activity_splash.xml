<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:tools="http://schemas.android.com/tools"
android:background="@drawable/gradient"
tools:context=".SplashActivity">


    <TextView
        android:id="@+id/w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/e1"
        android:text="W"
        android:layout_margin="0.5dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/ball_shape"/>

    <TextView
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/l"
        android:text="E"
        android:layout_margin="0.5dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/ball_shape"/>

    <TextView
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/c"
        android:text="L"
        android:layout_margin="0.5dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/ball_shape"/>

    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="C"
        android:layout_margin="0.5dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/ball_shape"/>

    <TextView
        android:id="@+id/o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/c"
        android:text="O"
        android:layout_margin="0.5dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/ball_shape"/>

    <TextView
        android:id="@+id/m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/o"
        android:text="M"
        android:layout_margin="0.5dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/ball_shape"/>

    <TextView
        android:id="@+id/e2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/m"
        android:text="E"
        android:layout_margin="1dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="@drawable/ball_shape"/>

</RelativeLayout>